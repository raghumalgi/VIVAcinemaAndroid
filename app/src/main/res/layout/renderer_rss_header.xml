<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="3dp"
    	android:lines="1"
    	android:scrollHorizontally="true"
    	android:ellipsize="end" 
    	android:textColor="#FF0000ee"
    	android:textSize="14sp"
    	android:text="Android Architecture: Part 10, The Activity Revisited"
        />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/title"
    	android:lines="1"
    	android:scrollHorizontally="true"
    	android:ellipsize="end" 
    	android:textSize="10sp"
    	android:text="July 9, 2012 11:02 AM"
        />
    
    <TextView 
        android:id="@+id/description"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:layout_below="@+id/date"
    	android:maxLines="2"
    	android:scrollHorizontally="true"
    	android:ellipsize="end" 
    	android:textSize="12sp"
    	android:text="Android Architecture: Part 10, The Activity Revisited Android Architecture: Part 10, The Activity Revisited Android Architecture: Part 10, The Activity Revisited"
        />

</RelativeLayout>