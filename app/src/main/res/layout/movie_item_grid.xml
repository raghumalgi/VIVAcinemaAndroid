<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="115dip"
        android:layout_height="137dip"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/movie_img" />

    <com.movie.movieticketbooking.utils.LiberationBold
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPicture"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/imgPicture"
        android:layout_alignRight="@+id/imgPicture"
        android:layout_alignTop="@+id/imgPicture"
        android:weightSum="1"
        android:background="#CC000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:src="@drawable/imdb" />

        <TextView
            android:id="@+id/imdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:text="7.5"
            android:layout_marginRight="3dp"
            android:textColor="#fbc70d"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>