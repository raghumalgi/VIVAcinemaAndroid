<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
      xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >
        
          <LinearLayout
            android:id="@+id/progress_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <com.movie.movieticketbooking.ProgressWheel
                android:id="@+id/progress"
                android:layout_width="40dp"
                wheel:matProg_barColor="@android:color/holo_blue_dark"
        		wheel:matProg_progressIndeterminate="true"
                android:layout_height="40dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bannerIv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                 android:src="@drawable/banner"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical" >

               <TextView
                    android:id="@+id/duration"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:text="112 MIN"
                      android:background="@drawable/rounded_text"
                      android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                
                   <TextView
                    android:id="@+id/age"
                     android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:text="AGE 15+"
                      android:background="@drawable/rounded_text"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                   
                    <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                  android:background="@drawable/rounded_text"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/imdb" />

                <TextView
                    android:id="@+id/imdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="0.4"
                    android:text="7.5"
                    android:textColor="#fbc70d"
                    android:textSize="15sp" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.movie.movieticketbooking.utils.LiberationRegular
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:ellipsize="end"
            android:gravity="left"
            android:layout_marginTop="24dp"
            android:maxLines="2"
            android:text="Bullet Raja "
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

      
     <RelativeLayout 
        android:layout_width="fill_parent"
         android:background="@color/purple"
         android:orientation="horizontal"
         android:layout_marginTop="20dp"
        android:layout_height="48dp">
      
        <com.movie.movieticketbooking.utils.LiberationRegular
            android:id="@+id/theatreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:paddingLeft="24dp"
           android:layout_centerVertical="true"
            android:text="Baharain - Wlabha"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@drawable/select" />

</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" >
        </View>

           
     <RelativeLayout 
        android:layout_width="fill_parent"
         android:background="@color/purple"
         android:orientation="horizontal"
        android:layout_height="48dp">
      
        <com.movie.movieticketbooking.utils.LiberationRegular
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:paddingLeft="24dp"
           android:layout_centerVertical="true"
            android:text="8 : 15"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@drawable/select" />

</RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="11dip"
            android:gravity="left"
             android:paddingTop="5dp"
                android:paddingBottom="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center_vertical"
               
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/seat_gray" />

                <com.movie.movieticketbooking.utils.LiberationRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="6.0dip"
                    android:text="  Available"
                    android:textColor="@android:color/black"
                    android:textSize="12.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/seat_green" />

                <com.movie.movieticketbooking.utils.LiberationRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="6.0dip"
                    android:text="  Booked"
                    android:textColor="@android:color/black"
                    android:textSize="12.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/seat_red" />

                <com.movie.movieticketbooking.utils.LiberationRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="6.0dip"
                    android:text="  Unavailable"
                    android:textColor="@android:color/black"
                    android:textSize="12.0dip" />
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="top|center"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:scrollbars="none" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false" >

                 <com.movie.movieticketbooking.BiDirectionalScrollWithZoom
                    android:id="@+id/zoomlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip" >
                <TableLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </com.movie.movieticketbooking.BiDirectionalScrollWithZoom>
                
            </ScrollView>
            
        </HorizontalScrollView>
        
        <ImageView
            android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:visibility="visible"
        android:src="@drawable/screen" />
        
         <Button
            android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:text="NEXT"
         android:paddingLeft="24dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow"
           
        android:src="@drawable/screen" />
    </LinearLayout>
